<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="@drawable/reg_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textSize="38sp"
        android:textColor="#ec5121"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textColor="#605F5F"
        android:textSize="18dp"
        android:text="Register As A Vendor"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#605F5F"
        android:textSize="18dp"
        android:text="- Create your own portfolio"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#605F5F"
        android:textSize="18dp"
        android:text="- Find the best job suits you"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/buttonVenderReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_login_two"
        android:outlineAmbientShadowColor="#777575"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="Register AS vender"
        android:textAllCaps="true"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="35dp"
        android:textColor="#605F5F"
        android:textSize="18dp"
        android:text="Register As A Organizer"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#605F5F"
        android:textSize="18dp"
        android:text="- Post your Events"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#605F5F"
        android:textSize="18dp"
        android:text="- Find the best vendor for your job"
        tools:ignore="RtlCompat" />


    <Button
        android:id="@+id/buttonOrginizerReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_login_two"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="Register As Organizer"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:outlineAmbientShadowColor="#777575"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="@drawable/bg_event">

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#FBF3A6"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="78dp"
        android:ems="1"
        android:hint="User Name"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="#0B0909" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#FBF3A6"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="78dp"
        android:ems="1"
        android:hint="......"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="#0B0909" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_login_two"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="Login in"
        android:textAllCaps="true"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:textColor="#0B0909"
        android:textSize="18dp"
        android:text="New to Events platform, Click Register Now!"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/buttonReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_login_two"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="Register Now"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:outlineAmbientShadowColor="#777575"
        />


</LinearLayout>